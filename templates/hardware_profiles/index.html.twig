{% extends 'base.html.twig' %}

{% block title %}HardwareProfiles index{% endblock %}

{% block body %}
    <h1>HardwareProfiles index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Name</th>
                <th>Description</th>
                <th>Supported</th>
                <th>Cost</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for hardware_profile in hardware_profiles %}
            <tr>
                <td>{{ hardware_profile.id }}</td>
                <td>{{ hardware_profile.type ? 'VM' : 'Container' }}</td>
                <td>{{ hardware_profile.name }}</td>
                <td>{{ hardware_profile.description }}</td>
                <td>{{ hardware_profile.supported ? 'Yes' : 'No' }}</td>
                <td>{{ hardware_profile.cost }}</td>
                <td>
                    <a href="{{ path('app_hardware_profiles_show', {'id': hardware_profile.id}) }}">show</a>
                    <a href="{{ path('app_hardware_profiles_edit', {'id': hardware_profile.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_hardware_profiles_new') }}">Create new</a>
{% endblock %}
