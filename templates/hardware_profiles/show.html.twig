{% extends 'base.html.twig' %}

{% block title %}HardwareProfiles{% endblock %}

{% block body %}
    <h1>HardwareProfiles</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ hardware_profile.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ hardware_profile.type ? 'VM' : 'Container' }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ hardware_profile.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ hardware_profile.description }}</td>
            </tr>
            <tr>
                <th>Supported</th>
                <td>{{ hardware_profile.supported ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Cost</th>
                <td>{{ hardware_profile.cost }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_hardware_profiles_index') }}">back to list</a>

    <a href="{{ path('app_hardware_profiles_edit', {'id': hardware_profile.id}) }}">edit</a>

    {{ include('hardware_profiles/_delete_form.html.twig') }}
{% endblock %}
