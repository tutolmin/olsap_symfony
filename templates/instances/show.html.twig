{% extends 'base.html.twig' %}

{% block title %}Instances{% endblock %}

{% block body %}
    <h1>Instances</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ instance.id }}</td>
            </tr>
            <tr>
                <th>Instance Type</th>
                <td>{{ instance.instancetype }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ instance.createdAt ? instance.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Addresses</th>
                <td>{{ addrs }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ instance.name }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ instance.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_instances_index') }}">back to list</a>
<!--
    <a href="{{ path('app_instances_edit', {'id': instance.id}) }}">edit</a>
-->

    <table class="table">
        <tbody>
            <tr>
                <td>{{ include('instances/_start_form.html.twig') }}</td>
                <td>{{ include('instances/_stop_form.html.twig') }}</td>
                <td>{{ include('instances/_restart_form.html.twig') }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('instances/_delete_form.html.twig') }}
{% endblock %}
