{% extends 'userbase.html.twig' %}

{% block title %}Testee{% endblock %}

{% block body %}
    <h1>Online Linux Skills Assessment Platform</h1>
<p>This is your personal page. You can see your test sessions below.</p>    
    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ testee.email }}
                </td>

            </tr>
            <tr>
                <th>Sessions</th>
                <td>
                    {% for key, value in session_links %}
                    <li><a href='{{ value|e }}'>{{ session_names[key] }}</a></li>
                    {% endfor %}
                </td>
            </tr>

            <tr>
                <th>Registered_at</th>
                <td>{{ testee.registeredAt ? testee.registeredAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
