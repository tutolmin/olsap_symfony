{% extends 'base.html.twig' %}

{% block title %}Technologies index{% endblock %}

{% block body %}
    <h1>Technologies index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Domain</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for technology in technologies %}
            <tr>
                <td>{{ technology.id }}</td>
                <td>{{ technology.domain }}</td>
                <td>{{ technology.name }}</td>
                <td>{{ technology.description }}</td>
                <td>
                    <a href="{{ path('app_technologies_show', {'id': technology.id}) }}">show</a>
                    <a href="{{ path('app_technologies_edit', {'id': technology.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_technologies_new') }}">Create new</a>
{% endblock %}
